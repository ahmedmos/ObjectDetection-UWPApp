            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3"/>
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <!--<TextBlock x:Name="DisplayText" HorizontalAlignment="Center" VerticalAlignment="Top" Text="test" Foreground="Black"/>-->
           

